<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:p="http://www.springframework.org/schema/p"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
	   					   http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="yamlReader" class="org.developers.system.YamlReader">
        <constructor-arg value="M:\Projects\Bookstore\src\main\resources\connectDB\config.yml"/>
    </bean>

    <bean id="dataSource" class="org.springframework.jdbc.datasource.DriverManagerDataSource"
          p:driverClassName='#{yamlReader.read().get("database").get("accountancy").get("driverclassname")}'
          p:url='#{yamlReader.read().get("database").get("accountancy").get("url")}'
          p:username='#{yamlReader.read().get("database").get("accountancy").get("user")}'
          p:password='#{yamlReader.read().get("database").get("accountancy").get("password")}'/>

</beans>