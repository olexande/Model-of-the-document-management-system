<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:p="http://www.springframework.org/schema/p"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
	   					   http://www.springframework.org/schema/beans/spring-beans.xsd">
    <!--Миронов - Внедрение ролей{-->
    <!--получаем настройки соединения с БД с внешнего файла настроек-->
    <bean
            id="propertyConfigurer"
            class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer"
            p:location="database.connection.properties"/>

    <!--"устанавливаем соединение"-->
    <bean id="dataSource" class="org.springframework.jdbc.datasource.DriverManagerDataSource"
          p:driverClassName="${prostgresql.driverclassname}"
          p:url="${porstgresql.url}"
          p:username="${postgresql.user}"
          p:password="${postrgesql.password}"/>

    <!--Миронов - Внедрение ролей}-->

</beans>